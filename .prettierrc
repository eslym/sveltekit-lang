{
  "useTabs": false,
  "tabWidth": 4,
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 100,
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "plugins": ["prettier-plugin-svelte"]
      }
    },
    {
      "files": "*.{json,yaml,yml,prettierrc}",
      "options": {
        "tabWidth": 2,
        "printWidth": 200
      }
    },
    {
      "files": "*.{html,svg}",
      "options": {
        "parser": "html"
      }
    }
  ]
}
